<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wn.csd.mapper.UserMapper">
    <resultMap id="userMap" type="com.wn.csd.domain.User">
        <id property="id" column="id"/>
        <result property="tel" column="tel"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="invitation" column="invitation"/>
    </resultMap>

    <sql id="selectUser">
        SU.ID,SU.TEL,SU.PASSWORD,SU.EMAIL,SU.INVITATION
    </sql>

    <select id="findUserByTel" resultMap="userMap" parameterType="string">
        SELECT
        <include refid="selectUser"/>
        FROM SYS_USER SU
        <where>
            <if test="tel!=null">
                AND SU.TEL = #{tel}
            </if>
            <if test="password!=null">
                AND SU.PASSWORD = #{password}
            </if>
        </where>
    </select>



</mapper>